{% extends 'base.html.twig' %}

{% block metaTitle %}
Articles
{% endblock %}
{% block header %}
<h1>Articles</h1>
{% endblock %}

{% block main %}
<main>
    <h2>Il y a {{articles | length }} articles dans la BD</h2>
    <div class="articles-container">
    {% for article in articles %}
        <article class="article">
            <!-- ArticleShow pour pouvoir cliquer sur les articles -->
            <a href="{{ path ('articleShow', {'id': article.id}) }}">
            <h2>{{ article.title }}</h2>
            </a>
            <p>{{ article.content }}</p>
        </article>
    {% endfor %}
    </div>
</main>
{% endblock%}

{% block foot %}
<footer>
    <div class="foot">
    yo les naze
    </div>
</footer>
{% endblock%}