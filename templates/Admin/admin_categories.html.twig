{% extends 'admin/admin_base.html.twig' %}

{% block metaTitle %}
    Liste des categories
{% endblock metaTitle %}


{% block main %}
    <h1>Il y a {{ categories | length }} categories dans la base de données</h1>
    <div class="articles-container">
        {% for categorie in categories %}
            <article class="article">
                <h2>{{ categorie.title | upper }}</h2>
                <a href="{{ path('admin_categorie_Delete', {'id': categorie.id }) }}">Supprimer</a>
                <a href="{{ path('admin_categorie_Update', {'id': categorie.id }) }}">Mettre à jour (hardcodé)</a>            </article>
        {% endfor %}
        <a href="{{ path('admin_categorie_Insert') }}">Ajouter une categorie (hardcodé)</a>

    </div>
{% endblock main %}